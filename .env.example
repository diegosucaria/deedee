# Google Gemini API
# Get clean key: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Telegram Bot
# Get from BotFather
TELEGRAM_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxYZ
ALLOWED_TELEGRAM_IDS=123456789,987654321

# Access Control
# Token for external API calls (e.g. iOS Shortcuts) to apps/api
DEEDEE_API_TOKEN=generate_a_secure_random_string_here

# GitHub (for self-improvement)
# Repo Access Token
GITHUB_PAT=ghp_your_personal_access_token_here

# Optional Integrations
PLEX_URL=http://192.168.1.10:32400
PLEX_TOKEN=your_plex_token_here
